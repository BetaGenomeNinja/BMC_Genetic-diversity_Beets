dict = {}
dict1 = {}
n = 0
n1 = 0
for i in readfile1:
	if 'INDEL' and '#' not in i:
                j = i.split('\t')
                line4 = str(j[0])
                line5 = str(j[1])
                line8 = str(line4+'XX,'+line5+'XX')
                #s.add(line8)
		key = line8
                value = 'yes'
                dict[key] = value	
	          
#for i in readfile2:
	#n = n + 1
	#print n
    
for i in readfile2:
	dict1 = {}
	n1 = n1 + 1
        for k in fileinput.input(i[0:-1]):
                j = k.split(' ')
                line4 = str(j[0])
                line5 = str(j[1])
                line8 = str(line4+'XX,'+line5+'XX')
                if line8 in dict:
			key = line8
                	value = 'yes'
                	dict1[key] = value
	
		#for k in dict1:
		#	print n1,k
	dict = dict1
for k in dict1:
	print k
	
