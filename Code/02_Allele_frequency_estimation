filter_space.py
#################

import sys
import os
import time
import subprocess
import fileinput

## USAGE
## python filter_space.py .col .pileup


dir = os.getcwd()

File1 = open(sys.argv[1],"r")
File2 = sys.argv[2]

readfile1 = File1.readlines()

s=set()
dict = {}

for i in readfile1:
		j = i.split(' ')
		line4 = str(j[0])
		line5 = str(j[1][0:-1])
		line6 = str(line4+','+line5)
		#print j
		s.add(line6)

for n in fileinput.input(File2):
			j = n.split(' ')
			line7 = str(j[0])
        		line8 = str(j[1])
        		line9 = str(line7+','+line8)	   
			if line9 in s:
				print n[0:-1]
